
<h1><%= @vinyl.title %></h1>
<hr><br>
<p><b>Artist:</b> <%= @vinyl.artist %></p>
<p><b>Genre:</b> <%= @vinyl.genre %></p>
<p><b>Release Year:</b> <%= @vinyl.release_year %></p>
<form method="POST" action="/vinyls/<%= @vinyl.id %>">
  <a class="btn btn-outline-primary" type="submit" href="/vinyls/<%= @vinyl.id %>/edit" role="button">Edit Vinyl</a>
  <br><br>
  <input type="hidden" id="hidden" name="method" value="delete">
  <input class="btn btn-outline-primary" type="submit" value="Delete Vinyl" id="Delete Vinyl">
  <br><br>
</form>
