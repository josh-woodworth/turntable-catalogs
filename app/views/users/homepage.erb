
  <h1>Welcome to <%=@user.username%>'s Vinyl Collection</h1>
<br>
<% if !@vinyls.empty? %>
      <% @vinyls.reverse.each do |vinyl| %>
          <h4><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>"><%= vinyl.artist %></a></h4>
          <h4><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>"><%= vinyl.album_name %></a></h4>
          <a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>/edit">Edit</a>
      <% end %>
<% else %>
    <p> Add Some Vinyl's To Your Collection!</p>
<% end %>